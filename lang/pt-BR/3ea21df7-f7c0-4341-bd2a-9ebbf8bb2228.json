                     "name": "Anastacia",
                     "family_id": "3ea21df7-f7c0-4341-bd2a-9ebbf8bb2228",
                     "external_family_file": false,
                     "add_link": true,
                     "history": [
                        {
                           "text": "De acordo com batismo da filha",
                           "source": [
                              {
                                 "type": 0,
                                 "uuid": "e22c0cda-295d-42b6-b10b-5b2afa7640fd",
                                 "text": "Arquivo Eclesiástico da Arquidiocese de Mariana"
                              }
