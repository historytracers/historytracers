                     "id": "c7442d8a-e853-4e3f-9558-3901c35f8fc6",
                     "marriage_id": "d491cad7-214a-4c0c-983e-e6c3d0af0897",
                     "name": "Anastacia",
                     "family_id": "3ea21df7-f7c0-4341-bd2a-9ebbf8bb2228",
                     "external_family_file": false,
                     "add_link": true,
                     "history": [
                        {
                           "text": "According to her daughter's baptism",
                           "source": [
                              {
                                 "type": 0,
                                 "uuid": "e22c0cda-295d-42b6-b10b-5b2afa7640fd",
                                 "text": "Arquivo Eclesiástico da Arquidiocese de Mariana"
