         "value": [
            {
               "family_id": "",
               "person_id": "",
               "id": "4f0474ba-3c05-43cd-8528-d3f383eae556",
               "name": "Multiplying the Findings",
               "desc": "an educational game in which the reader visualizes multiplication while exploring different archaeological sites.",
               "date_time": null
            },
            {
               "family_id": "",
               "person_id": "",
               "id": "71a07afa-964d-4e43-93c1-b2e0ed330acb",
               "name": "The result is (Phase II)",
               "desc": "a game to reinforce the connection between addition and multiplication.",
               "date_time": null
            },
            {
               "family_id": "",
               "person_id": "",
               "id": "9a7a978b-3fac-422c-8e41-3ef1a24e88f3",
               "name": "Yupana (Multiplication)",
               "desc": "Using the same method (<a href=\"#\" onclick=\"htCleanSources(); htFillReferenceSource('a62b520a-f443-4d83-ab51-b99c9a46dab8'); return false;\">Prem, Dhavit</a>), multiplication is also presented visually.",
               "date_time": null
            },
            {
               "family_id": "",
               "person_id": "",
               "id": "648170f0-672f-4f9b-8746-492f7f9ad455",
               "name": "Multiplying with grids",
               "desc": "Based on the work of researchers Ximena Catepillán and Ruy D. Días (<a href=\"#\" onclick=\"htCleanSources(); htFillReferenceSource('ced67eaf-7378-4589-9166-07f799969e3e'); return false;\">Catepillán, Ximena</a> ; <a href=\"#\" onclick=\"htCleanSources(); htFillReferenceSource('9e7d0cea-d968-4bd5-886e-bc08c824e7ca'); return false;\">Díaz, Ruy D.</a>), we show how the Maya possibly carried out their multiplications.",
               "date_time": null
            }
         ],
         "date_time": null
      },
