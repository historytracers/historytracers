         "id": "SECTION_prerequisites",
         "text": [
            {
               "text": "<p><span id=\"htZoomImageMsg\"></span></p><p><span id=\"htAmericaAbyaYalaMsg\"></span> (<a href=\"#\" onclick=\"htCleanSources(); htFillReferenceSource('160fb48c-1711-491e-a1aa-e1257e7889af'); return false;\">Porto-Gonçalves, Carlos Walter, <htdate0>, pp. 39-43</a>).</p><p><span id=\"htAgeMsg\"></span></p>",
               "source": null,
               "date_time": [
                  {
                     "type": "gregory",
                     "year": "2011",
                     "month": "-1",
                     "day": "-1"
                  }
               ],
               "isTable": false,
               "imgdesc": "",
